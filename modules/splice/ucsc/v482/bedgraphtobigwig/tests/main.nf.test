nextflow_process {

    name "Test Process UCSC_BEDGRAPHTOBIGWIG"
    script "../main.nf"
    process "UCSC_BEDGRAPHTOBIGWIG"

    test("Should run without failures") {
        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test' ], // meta map
                    file("${moduleTestDir}" + '/data/test.bedgraph', checkIfExists: true)
                ])
                input[1] = Channel.of(file("${moduleTestDir}" + '/data/genome.sizes', checkIfExists: true))
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }

    test("stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test' ], // meta map
                    file("${moduleTestDir}" + '/data/test.bedgraph', checkIfExists: true)
                ])
                input[1] = Channel.of(file("${moduleTestDir}" + '/data/genome.sizes', checkIfExists: true))
                """
            }
        }

        then {
            assertAll (
            { assert process.success },
            { assert snapshot(process.out).match() }
            )
        }
    }
}
