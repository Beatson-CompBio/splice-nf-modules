profiles {

    apptainer {
        apptainer.enabled = true
    }

    singularity {
        singularity.enabled = true
    }

    docker {
        docker.enabled = true
    }
}

params {
    modules_testdata_base_path = "$baseDir/tests/data/"
}

process {

    withName: BEDTOOLS_GENOMECOV {
        ext.prefix = { "${meta.id}.coverage" }
        ext.singularity_pull_docker_container = true
        memory = '4 GB'
        cpus = 2
    }
    
}
