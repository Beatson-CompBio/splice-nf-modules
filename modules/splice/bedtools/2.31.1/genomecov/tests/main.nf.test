nextflow_process {
    name "Test Process BEDTOOLS_GENOMECOV"
    script "../main.nf"
    process "BEDTOOLS_GENOMECOV"
    config "./nextflow.config"


    test("sarscov2 - no scale") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file("${moduleTestDir}" + '/data/test.paired_end.bam', checkIfExists: true),
                    1
                ]
                // sizes
                input[1] = []
                // extension
                input[2] = "txt"
                input[3] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("sarscov2 - dummy sizes") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test'],
                    file("${moduleTestDir}" + '/data/test.paired_end.bam', checkIfExists: true),
                    0.5
                ]
                // sizes
                input[1] = file('dummy_chromosome_sizes')
                // extension
                input[2] = 'txt'
                input[3] = false
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("sarscov2 - scale") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test'],
                    file("${moduleTestDir}" + '/data/baits.bed', checkIfExists: true),
                    0.5
                ]
                // sizes
                input[1] = file("${moduleTestDir}" + '/data/genome.sizes', checkIfExists: true)
                // extension
                input[2] = 'txt'
                input[3] = false
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

