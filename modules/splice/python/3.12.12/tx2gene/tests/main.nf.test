nextflow_process {

    name "Test Process CUSTOM_TX2GENE"
    script "../main.nf"
    process "CUSTOM_TX2GENE"

    tag "modules"
    tag "modules_nfcore"
    tag "custom"
    tag "python/3.12.12/tx2gene"
    tag "coreutils/9.4/untar"

    test("saccharomyces_cerevisiae - gtf") {

        setup {
            run("UNTAR") {
                script "../../../../coreutils/9.4/untar/main.nf"
                process {
                    """
                    input[0] = Channel.of([
                        [ id:'test'], // meta map
                        file("${moduleTestDir}" + '/data/kallisto_results.tar.gz', checkIfExists: true)
                    ])
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test'], // meta map
                    file("${moduleTestDir}" + '/data/genome_gfp.gtf', checkIfExists: true)
                ])
                input[1] = UNTAR.out.untar.map { meta, dir -> [ meta, dir.listFiles().collect() ] }
                input[2] = 'kallisto'
                input[3] = 'gene_id'
                input[4] = 'gene_name'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

