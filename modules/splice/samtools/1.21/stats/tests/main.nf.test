nextflow_process {

    name "Test Process SAMTOOLS_STATS"
    script "../main.nf"
    process "SAMTOOLS_STATS"


    test("bam") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ], // meta map
                    file("${moduleTestDir}/data/test.paired_end.sorted.bam", checkIfExists: true),
                    file("${moduleTestDir}/data/test.paired_end.sorted.bam.bai", checkIfExists: true)
                ])
                input[1] = [[],[]]
                """
            }
        }

        then {
            assertAll(
                {assert process.success},
                { assert snapshot(
                    process.out.stats.collect { it.collect { it instanceof Map ? it : file(it).name } },
                    process.out.versions
                ).match() }
            )
        }
    }

    test("cram") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ], // meta map
                    file("${moduleTestDir}/data/test.paired_end.recalibrated.sorted.cram", checkIfExists: true),
                    file("${moduleTestDir}/data/test.paired_end.recalibrated.sorted.cram.crai", checkIfExists: true)
                ])
                input[1] = Channel.of([
                    [ id:'genome' ], // meta map
                    file("${moduleTestDir}/data/genome.fasta", checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll(
                {assert process.success},
                { assert snapshot(
    process.out.stats.collect { it.collect { it instanceof Map ? it : file(it).name } },
    process.out.versions
).match() }
            )
        }
    }

