nextflow_process {

    name "Test Process SAMTOOLS_IDXSTATS"
    script "../main.nf"
    process "SAMTOOLS_IDXSTATS"

    test("bam") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ], // meta map
                    file("${moduleTestDir}/data/test.paired_end.sorted.bam", checkIfExists: true),
                    file("${moduleTestDir}/data/test.paired_end.sorted.bam.bai", checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("bam - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ], // meta map
                    file("${moduleTestDir}/data/test.paired_end.sorted.bam", checkIfExists: true),
                    file("${moduleTestDir}/data/test.paired_end.sorted.bam.bai", checkIfExists: true)
                ])
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }}
