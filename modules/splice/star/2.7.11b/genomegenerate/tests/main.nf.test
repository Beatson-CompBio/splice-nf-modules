nextflow_process {

    name "Test Process STAR_GENOMEGENERATE"
    script "../main.nf"
    process "STAR_GENOMEGENERATE"

    test("fasta_gtf") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test_fasta' ],
                    [ file("${moduleTestDir}/data/genome.fasta", checkIfExists: true) ]
                ])
                input[1] = Channel.of([
                    [ id:'test_gtf' ],
                    [ file("${moduleTestDir}/data/genome.gtf", checkIfExists: true) ]
                ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    file(process.out.index[0][1]).listFiles().collect { it.getName() }.sort().toString(),
                    process.out.versions)
                .match() }
            )
        }
    }

    test("fasta") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test_fasta' ],
                    [ file("${moduleTestDir}/data/genome.fasta", checkIfExists: true) ]
                ])
                input[1] = Channel.of([ [], [] ])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    file(process.out.index[0][1]).listFiles().collect { it.getName() }.sort().toString(),
                    process.out.versions
                ).match() }
            )
        }
    }

