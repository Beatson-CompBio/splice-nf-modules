profiles {

    apptainer {
        apptainer.enabled = true
    }

    singularity {
        singularity.enabled = true
    }

    docker {
        docker.enabled = true
    }
}

params {
    modules_testdata_base_path = "$baseDir/tests/data/"
}

process {
    withName: PICARD_MARKDUPLICATES {
        ext.prefix = { "${meta.id}.marked" }
        ext.args = '--ASSUME_SORT_ORDER queryname'
        ext.singularity_pull_docker_container = true
    }
}
