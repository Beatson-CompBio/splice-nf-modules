/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/
profiles {

    apptainer {
        apptainer.enabled = true
    }

    singularity {
        singularity.enabled = true
    }

    docker {
        docker.enabled = true
    }
}

params {
    //modules_testdata_base_path = 'https://github.com/nf-core/test-datasets/raw/modules/data/'
    modules_testdata_base_path = "$baseDir/tests/data/"
    outdir = "results"
    publish_dir_mode = "copy"
    skip_fastqc = false
}

process {
    cpus = 1
    memory = '1 GB'
    time = '2h'
    ext.singularity_pull_docker_container = false
}